{
	"name": "viz",
	"version": "0.1.0",
	"private": true,
	"author": "Fabien Allanic & Maxime Burlat",
	"main": "public/start-electron.js",
	"homepage": "./",
	"dependencies": {
		"dexie": "^2.0.3",
		"electron-is-dev": "^0.3.0",
		"immutable": "^3.8.2",
		"platform": "^1.3.5",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-scripts": "1.1.4",
		"react-toolbox": "^2.0.0-beta.12"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"precommit": "lint-staged",
		"prettier": "prettier --write \"**/*.{js,jsx}\"",
		"electron": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
		"electron-pack": "build -c.extraMetadata.main=build/start-electron.js",
		"preelectron-pack": "npm build"
	},
	"devDependencies": {
		"babel-eslint": "^8.2.3",
		"concurrently": "^3.5.1",
		"electron": "^1.8.4",
		"electron-builder": "^20.11.1",
		"eslint": "^4.19.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-import": "^2.11.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"husky": "^0.14.3",
		"lint-staged": "^7.0.4",
		"prettier": "^1.12.1",
		"wait-on": "^2.1.0"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"build": {
		"appId": "io.viz",
		"files": [
			"build/**/*",
			"node_modules/**/*"
		],
		"directories": {
			"buildResources": "assets"
		}
	}
}